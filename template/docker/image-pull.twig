{% extends 'layout/base.twig' %}

{% block title %}Pull Docker Image{% endblock %}

{% block content %}
<div class="container-fluid px-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mt-4 mb-4">Pull Docker Image</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/server">Servers</a></li>
                    <li class="breadcrumb-item"><a href="/server/manage/{{ server.urlIdentifierServer }}">{{ server.nameServers }}</a></li>
                    <li class="breadcrumb-item active">Pull Image</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-cloud-download me-2"></i>Pull From Registry
                    </h5>
                </div>
                <div class="card-body">
                    <form id="pull-image-form" action="/images/pull/{{ server.urlIdentifierServer }}/ajax" method="post" data-no-loading>
                        <div class="mb-3">
                            <label for="image" class="form-label">Image Name</label>
                            <input type="text" class="form-control" id="image" name="image" required 
                                   placeholder="e.g. nginx:latest, mysql:8.0, ubuntu:20.04">
                            <div class="form-text">
                                Specify image name and optionally a tag (e.g., nginx:latest)
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Pull Image</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-tools me-2"></i>Custom Image
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid">
                        <a href="/dockerfiles/use/{{ server.urlIdentifierServer }}" class="btn btn-outline-primary">
                            <i class="bi bi-gear me-2"></i>Build Custom Image
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm mb-4" id="operation-result" style="display: none;">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-terminal me-2"></i>Operation Status
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Results will be displayed here -->
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Information
                    </h5>
                </div>
                <div class="card-body">
                    <h6 class="fw-bold">About Docker Images</h6>
                    <p>
                        Docker images are read-only templates used to create containers. 
                        These images contain the application code, libraries, dependencies, 
                        tools, and other files needed for an application to run.
                    </p>
                    
                    <h6 class="fw-bold mt-3">Common Images</h6>
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            nginx:latest
                            <span class="badge bg-secondary">Web Server</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            mysql:8.0
                            <span class="badge bg-secondary">Database</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            php:8-apache
                            <span class="badge bg-secondary">Web Development</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            redis:latest
                            <span class="badge bg-secondary">Cache</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script src="/assets/js/docker-image-manager.js"></script>
{% endblock %} 