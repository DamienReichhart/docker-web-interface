        App[Application Web]
    end

    subgraph "Acteurs Principaux"
        Admin[Administrateur Système]
        User[Utilisateur]
    end

    subgraph "Acteurs Secondaires"
        Docker[Docker Engine]
        DB[(Base de Données)]
    end

